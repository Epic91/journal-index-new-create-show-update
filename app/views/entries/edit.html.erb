<h1>Edit your Journal entry:</h1>

<%= form_for  @entry do |f| %>
    <%= f.label 'Name' %>
    <%= f.text_field :name %><br><br>

    <%= f.label 'Subject' %><br>
    <%= f.text_field :subject %><br><br>
    
    <%= f.label 'Body' %><br>
    <%= f.text_area :body %><br><br>

    <%= f.submit 'Submit Entry' %>
<% end %>
<br>
<%= link_to 'Back', :back%>
